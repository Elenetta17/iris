FROM ubuntu:20.04 AS builder
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install -y -q --no-install-recommends \
        build-essential \
        ca-certificates \
        git \
    && rm -rf /var/lib/apt/lists/*

RUN git clone https://github.com/alexandres/terashuf.git /tmp/terashuf \
    && cd /tmp/terashuf \
    && make -j8

FROM python:3.8
LABEL key="Matthieu Gouel <matthieu.gouel@lip6.fr>"

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install -y -q --no-install-recommends \
        apt-transport-https ca-certificates dirmngr \
    && rm -rf /var/lib/apt/lists/*

RUN apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv E0C56BD4 \
    && echo "deb https://repo.clickhouse.tech/deb/stable/ main/" > \
        /etc/apt/sources.list.d/clickhouse.list \
    && apt-get update \
    && apt-get install -y -q --no-install-recommends \
        clickhouse-client \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY --from=builder /tmp/terashuf/terashuf /app/terashuf/terashuf

RUN mkdir vendors
COPY vendors/diamond-miner-core vendors/diamond-miner-core

RUN pip install --upgrade pip \
    && pip install poetry uvicorn \
    && rm -rf /root/.cache/*

RUN poetry config virtualenvs.create false

COPY pyproject.toml pyproject.toml
RUN poetry install --no-root --no-dev \
    && rm -rf /root/.cache/*

COPY iris iris

RUN mkdir results

ENV TMPDIR /app/results/
ENV MEMORY 24

CMD ["dramatiq", "iris.worker.hook"]
